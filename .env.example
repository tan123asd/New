# Environment Variables cho Development
# Copy file này thành .env và điền các giá trị thực tế

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:5150/api
REACT_APP_ENV=development

# Firebase Configuration (CẬP NHẬT TỪ FIREBASE CONSOLE)
# Hướng dẫn lấy config:
# 1. Truy cập: https://console.firebase.google.com/
# 2. Chọn project > Project Settings > General > Your apps
# 3. Thêm web app nếu chưa có > Copy config values
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key-here
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=your-app-id-here

# Authentication Configuration
REACT_APP_USE_FIREBASE_AUTH=true
REACT_APP_USE_MOCK_BACKEND=false

# Feature Flags
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_ANALYTICS=true

# App Configuration
REACT_APP_APP_NAME=Drug Free Recovery Platform
REACT_APP_SUPPORT_EMAIL=support@drugfree.com
REACT_APP_CRISIS_HOTLINE=+1 (555) 123-4567
